<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.noname.app.view.activity.SettingActivity">
    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_marginTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_holder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/mainColorPink"/>
        <TextView
            style="@style/AppTitleStyle"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="关闭资料"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_info"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="关"
            app:kswTextOn="开"
            app:kswBackColor="@color/appButtonColor"
            app:kswTintColor="@color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_album"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_holder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/mainColorPink"/>
        <TextView
            style="@style/AppTitleStyle"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="相册保密"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_ablum"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="关"
            app:kswTextOn="开"
            app:kswBackColor="@color/appButtonColor"
            app:kswTintColor="@color/white"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout_modify_pass"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_line2"
        android:gravity="center_vertical"
        >
        <ImageView
            android:layout_alignParentLeft="true"
            android:src="@drawable/icon_holder"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:tint="@color/mainColorPink"/>
        <TextView
            style="@style/AppTitleStyle"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:text="修改密码"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />

    </LinearLayout>

    <LinearLayout
        android:layout_margin="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_logoff"
            android:text="注销登录"
            style="@style/AppButtonStyle"
            />
        <TextView
            android:onClick="toTestVersion"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_version"
            android:text="版本号："
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>