<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/mainColorBlueDark"
    android:id="@+id/main_top">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"   >
        <!-- 头部导航 -->
        <RelativeLayout
            android:gravity="center"
            android:id="@+id/backLayout"
            android:layout_width="80dp"
            android:layout_height="match_parent">

                <ImageView
            android:tint="@color/white"
            android:src="@drawable/icon_map"
            android:id="@+id/icon_location"
            android:layout_width="20dp"
            android:layout_height="20dp" />
                <TextView
                       android:layout_toRightOf="@+id/icon_location"
                        android:id="@+id/txt_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="2dp"
                        android:text="定位中..."
                        android:textColor="#ffffff"
                         />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tag_layout_logo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_alignParentTop="true"
            >
            <TextView
                android:id="@+id/title"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="搜索会员"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:visibility="invisible"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/message"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"        >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageView android:id="@+id/btn_msg"
                        android:src="@drawable/icon_msg"
                        android:scaleType="centerInside"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:clickable="true"
                        android:tint="@color/white"
                        android:visibility="visible"/>
                    <cn.noname.app.widget.DragPointView
                        android:id="@+id/unread_num"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:visibility="invisible" />
                </RelativeLayout>

            </FrameLayout>


        </RelativeLayout>
    </LinearLayout>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:background="#dfdfdd" />-->
    </LinearLayout>

