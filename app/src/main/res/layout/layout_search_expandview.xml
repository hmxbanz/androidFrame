<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_gender"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="女"
            app:kswTextOn="男"
            app:kswBackColor="@color/appButtonColor"
            app:kswTintColor="@color/white"
            />

        <com.kyleduo.switchbutton.SwitchButton
            android:id="@+id/sb_marry"
            style="@style/SwitchButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/custom_text_state_color"
            android:textSize="16dp"
            app:kswTextOff="未婚"
            app:kswTextOn="离异，丧偶"
            app:kswBackColor="@color/appButtonColor"
            app:kswTintColor="@color/white"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_age"
            android:text="选择年龄"
            android:layout_width="0dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            style="@style/AppButtonStyle"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_area"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="选择地区"
            android:layout_width="0dp"
            style="@style/AppButtonStyle"
            android:layout_weight="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_search"
        android:text="@string/btn_search_text"
        android:layout_marginTop="20dp"
        style="@style/AppButtonStyle"
        />
</LinearLayout>